{
    "name": "opensaucesystems/lxd",
    "type": "library",
    "description": "PHP-based API wrapper for LXD REST API.",
    "keywords": [
        "opensaucesystems",
        "wrapper",
        "api",
        "client",
        "lxd"
    ],
    "homepage": "https://git.oss.place/opensaucesystems/lxd",
    "license": "MIT",
    "authors": [
        {
            "name": "Ashley Hood",
            "email": "ashley@opensauce.systems",
            "homepage": "https://www.opensauce.systems",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.5|~7.0",
        "nategood/httpful": "~0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "Mockery/Mockery": "^0.9.5"
    },
    "autoload": {
        "psr-4": {
            "Opensaucesystems\\Lxd\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opensaucesystems\\Lxd\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --coverage-text"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
